<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://images-na.ssl-images-amazon.com/images/I/511Uh-pXyjL._AC_SX466_.jpg" %>
    Lady Cocktail
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Create a cocktail", new_cocktail_path, class: "nav-link btn btn-success" %>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.cuisineaz.com/1280x720/2013-12-20/i14978-recette-de-mojito.jpeg);">
  <div class="container">
    <h1><%= @cocktail.name.capitalize %></h1>
  </div>
</div>

<div class="container">
  <h2>Ingredients</h2>
  <% @cocktail.doses.each do |dose| %>
    <ul>
      <li>
        <%= dose.ingredient.name %> - <%= dose.description %>
        <%= link_to "+ Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
      </li>
    </ul>
  <% end %>
  <div class="btn btn-success">
    <%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %>
  </div>
  <br>
  <%= link_to "+ Back to all cocktails", cocktails_path %>
</div>



