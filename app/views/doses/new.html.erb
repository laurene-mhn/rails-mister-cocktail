<div class="container mt-3">
  <h1>Add your doses</h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit class:"btn btn-primary" %>
  <% end %>

  <%= link_to "Back to cocktail" , cocktail_path(@cocktail), class:"btn btn-warning mt-3" %>
</div>
